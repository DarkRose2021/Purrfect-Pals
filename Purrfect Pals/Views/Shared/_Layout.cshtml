<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Purrfect Pals</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Purrfect_Pals.styles.css" asp-append-version="true" />
</head>
<body class="lightmode">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbarLightMode" id="navbar">
            <div class="container-fluid">
                <a id="a" class="navbar-brand linkLightMode" asp-area="" asp-controller="Home" asp-action="Index">Purrfect Pals</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="a2" class="nav-link linkLightMode" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="a3" class="nav-link linkLightMode" asp-area="" asp-controller="Home" asp-action="ProfilePage">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a id="a7" class="nav-link linkLightMode" asp-area="" asp-controller="Home" asp-action="Matches">Matches</a>
                        </li>
                    </ul>
                    <a id="a4" class="nav-link linkLightMode" onclick="toggle()">Toggle Dark Mode</a>
                    <a id="a5" class="nav-link linkLightMode" asp-area="" asp-controller="Home" asp-action="Signup">Sign Up</a>
                    <a id="a6" class="nav-link linkLightMode" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                    
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2023 - Purrfect Pals - Katie King, John Martindale, Daron Buck, &amp; Christian Colby
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
